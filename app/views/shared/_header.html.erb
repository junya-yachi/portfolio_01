<!-- HEADER -->
<header>
  <div class="header">
    <!-- TOPBAR -->
    <div class="top_row">
      <% if !logged_in? %>
        <div class="top_right">
          <%= link_to 'ログイン', new_user_session_path, class: 'log_in_btn' %>
          <%= link_to '新規登録', new_user_registration_path, class: 'sign_up_btn' %>
        </div>
      <% else %>
        <nav class="navbar navbar-expand-lg">
          <div class="container-fluid">
            <%= link_to 'ZaiFO', homes_top_path, class: 'navbar-brand' %>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item items">
                  <%= link_to 'ホーム', homes_top_path, class: 'nav-link active' %>
                </li>
                <li class="nav-item items">
                  <%= link_to '在庫管理', products_path, class: 'nav-link' %>
                </li>
                <li class="nav-item items">
                  <%= link_to '売上一覧', homes_top_path, class: 'nav-link' %>
                </li>
                <li class="nav-item items">
                  <%= link_to '発注', homes_top_path, class: 'nav-link' %>
                </li>
                <li class="nav-item items">
                  <%= link_to '取引先', clients_path, class: 'nav-link' %>
                </li>
                <li class="nav-item items">
                  <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'nav-link' %>
                </li>
              </ul>
              <form class="d-flex">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">検索</button>
              </form>
                <div class="header_user_box">
                  <div class="top_name"><%= current_user.name %></div>
                  <div class="header_name_details">
                    <%= current_user.email %>
                  </div>
                </div>
            </div>
          </div>
        </nav>
      <% end %>
    </div>
  </div>
</header>
