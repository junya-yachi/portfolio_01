<!-- HEADER -->
<header>
  <div class="header">
    <!-- TOPBAR -->
    <div class="top_row">
      <% if !logged_in? %>
        <div class="top_right">
          <%= link_to new_user_session_path do %>
            <div class="log_in_btn">ログイン</div>
          <% end %>
          <%= link_to new_user_registration_path do %>
            <div calss="sign_up_btn">新規登録</div>
          <% end %>
      <% else %>
        <nav class="navbar navbar-expand-lg">
          <div class="container-fluid">
            <a class="navbar-brand" href="#">ZaiFO</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                  <%= link_to 'ホーム', homes_top_path, class: 'nav-link active' %>
                </li>
                <li class="nav-item">
                  <%= link_to '在庫管理', homes_top_path, class: 'nav-link' %>
                </li>
                <li class="nav-item">
                  <%= link_to '売上一覧', homes_top_path, class: 'nav-link' %>
                </li>
                <li class="nav-item">
                  <%= link_to '発注', homes_top_path, class: 'nav-link' %>
                </li>
                <li class="nav-item">
                  <%= link_to '編集', homes_top_path, class: 'nav-link' %>
                </li>
                <li class="nav-item">
                  <%= link_to 'ログアウト', homes_top_path, class: 'nav-link' %>
                </li>
              </ul>
              <form class="d-flex">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">検索</button>
                <%# ransackでの検索フォーム %>
              </form>
            </div>
          </div>
        </nav>
        <div class="top_right"> <%# ここにハンバーガー %>
        </div>
      <% end %>
    </div>
  </div>
</header>
