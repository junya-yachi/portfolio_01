<section class="product_container">
  <div><h2>商品登録確認画面</h2></div>
  <%= form_with model: @product, url: products_path do |f| %>
    <div class="product_new_field">
      <%= f.label :order_date, '発注日' %>
      <%= f.text_field :order_date, value: @product.order_date, readonly: true %>
    </div>
    <div class="product_new_field">
      <%= f.label :product_name, '商品名' %>
      <%= f.text_field :product_name, value: @product.product_name, readonly: true %>
    </div>
    <div class="product_new_field">
      <%= f.label :product_price, '金額' %>
      <%= f.text_field :product_price, value: @product.product_price, readonly: true %>
    </div>
    <div class="product_new_field">
      <%= f.label :product_quantity, '数量' %>
      <%= f.text_field :product_quantity, value: @product.product_quantity, readonly: true %>
    </div>
    <div class="product_new_field">
      <%= f.label :product_type, '種類' %>
      <%= f.text_field :product_type, { ぬいぐるみ: 1,  雑貨:2,  その他一般系:3,  フィギュア:4,  その他コア系:5,  食品:6,  その他:7}, {include_blank: true}, value: @product.product_type %>
    </div>
    <div>
      <%= f.submit '修正する', name: :back %><br />
      <%= f.submit '登録する' %>
    </div>
  <% end %>
</section>
