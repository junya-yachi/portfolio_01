<section class="product_container">
  <div><p>商品登録画面</p></div>
  <%= form_with model: @product, url: products_new_path, local: true do |f| %>
    <div class="field">
      <%= f.label :order_date %>
      <%= f.text_field :order_date, autofocus: :true, autocomplete: 'order_date', placeholder: '発注日' %>
    </div>
    <div class="field">
      <%= f.label :product_name %>
      <%= f.text_field :product_name, autofocus: :true, autocomplete: 'product_name', placeholder: '商品名' %>
    </div>
    <div class="field">
      <%= f.label :product_price %>
      <%= f.text_field :product_price, autofocus: :true, autocomplete: 'product_price', placeholder: '金額' %>
    </div>
    <div class="field">
      <%= f.label :product_quantity %>
      <%= f.text_field :product_quantity, autofocus: :true, autocomplete: 'product_quantity', placeholder: '数量' %>
    </div>
    <div class="field">
      <%= f.label :product_type %>
      <%= f.text_field :product_type, autofocus: :true, autocomplete: 'product_type', placeholder: '種類' %>
    </div>
    <div class="actions">
      <%= f.submit '登録する' %>
    </div>
  <% end %>
</section>