<div>
  <h2>入力情報の確認</h2>
  <%= form_with(model: resource, scope: resource_name, url: registration_path(resource_name)) do |f| %>
    <div>
      <p><%= fa.label :name %><%= f.text_field :name, value: @user.name, readonly: true %></p>
    </div>
    <div>
      <p><%= fa.label :email %><%= f.text_field :email, value: @user.email, readonly: true %></p>
    </div>
    <div>
      <p><%= fa.label :password %><%= @password %></p>
    </div>

    <%= f.submit "修正する", name: :back %>
    <%= f.submit "登録する" %>
  <% end %>
</div>
