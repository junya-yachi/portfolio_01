<section class="client_container">
  <div><h2>取引先編集画面</h2></div>
  <%= form_with model: @client, local: true do |f| %>
    <p><%= render "shared/error_message", obj:@client %> </p>
    <div class="client_new_field">
      <%= f.label :cilent_name, '企業名' %>
      <%= f.text_field :cilent_name %>
    </div>
    <div class="client_new_field">
      <%= f.label :phone_num, '電話番号' %>
      <%= f.text_field :phone_num %>
    </div>
    <div class="client_new_field">
      <%= f.label :client_email, 'メールアドレス' %>
      <%= f.text_field :client_email %>
    </div>
    <div>
      <%= f.hidden_field :user_id %>
    </div>
    <div class="actions">
      <%= f.submit '修正する' %>
    </div>
  <% end %>
</section>
